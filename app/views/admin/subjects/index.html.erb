<h1>Listing subjects</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name %></td>
        <td><%= subject.description %></td>
        <td>
          <% if current_user %>
          <%= link_to 'Show', admin_subject_path(subject) %>
          <% end %></td>
        <td>
          <% if current_user && current_user.admin? %>
          <%= link_to 'Edit', edit_admin_subject_path(subject) %>
          <% end %>
        </td>
        <td>
          <% if current_user && current_user.admin? %>
          <%= link_to 'Destroy', admin_subject_path(subject),
          method: :delete, data: {confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user && current_user.admin? %>
  <%= link_to 'Add New Subject', new_admin_subject_path %>
<% end %>